@model IEnumerable<MySchool.Models.Post>

@{
    ViewData["Title"] = "ViewPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ViewPosts</h1>

<p>
    
</p>

@foreach (var item in Model)
{<br />
<div class="boxed" border="black">
    @Html.DisplayFor(modelItem => item.Author)<br /><br />
    @Html.DisplayFor(modelItem => item.Text)<br /><br />
    <a asp-action="CreateComment">Comment</a>
    <a asp-action="ViewComments">View Comments</a>
</div>
<br />
}
