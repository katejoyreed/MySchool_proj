@model MySchool.Models.PermissionSlip

@{
    ViewData["Title"] = "FillPermissionSlip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Approve Permission Slip</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FillPermissionSlip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                @Html.DisplayFor(model => model.Date)

            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                @Html.DisplayFor(model => model.Location)

            </div>

            <div class="form-group">
                <label asp-for="Classroom" class="control-label"></label>
                @Html.DisplayFor(model => model.Classroom)

            </div>
            <input type="hidden" asp-for="StudentFirst" />
            <input type="hidden" asp-for="StudentLast" />
            <input type="hidden" asp-for="ApprovingParent" />


            <div class="form-group">
                <input type="submit" value="Approve" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
