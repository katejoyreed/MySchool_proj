@model IEnumerable<MySchool.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Class Posts</h1>


<p>
    <a asp-action="CreatePost">Add New Class Post</a>
</p>
<p>
    <a asp-action="MyStudents">See My Students</a>
</p>
<p>
    <a asp-action="SetAvailability">Set Availability for Conferences</a>
</p>

@foreach (var item in Model)
{
<div class="boxed" border="black">
    @Html.DisplayFor(modelItem => item.Author)<br /><br />
    @Html.DisplayFor(modelItem => item.Text)<br /><br />
    <a asp-action="CreateComment">Comment</a>
    <a asp-action="ViewComments">View Comments</a>
</div>
 }
